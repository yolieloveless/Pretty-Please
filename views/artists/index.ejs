<%- include('../partials/header') %>

<h1>Artists</h1>
<section id="show-page">
    <div>Title: </div>
    <div><%= artists.title %></div>

</section>

<br><br>
<h2>Reviews</h2>
<form id="add-review-form" method="POST" action="/artists/<%= artist._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Review">
</form>

<% if (artist.reviews.length) { %>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Review</th>
        </tr>
    </thead>
    <tbody>
        <% artist.reviews.forEach(function(r) { %>
        <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
        </tr>
        <% }); %>
    </tbody>
</table>
<% } else { %>
<h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>