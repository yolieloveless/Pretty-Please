<%- include('../partials/header') %>

<h1>Artists</h1>
<div id="artists">
<img src="https://i.imgur.com/DRkQhAc.jpg" title="source: imgur.com" /></a>
<img src="https://i.imgur.com/sdt3LxK.jpg" title="source: imgur.com" /></a>
<img src="https://i.imgur.com/R1UWUrq.png" title="source: imgur.com" /></a>
</div>

<h2>Reviews</h2>
<form id="add-review" method="post" action="/artists/<%= artist.id %>/reviews">
<select name="artistName">
    <option value="Anne">Anne H.</option>
    <option value="John">John D.</option>
    <option value="Emily">Emily B.</option>
</select>
<label for="reviewLabel">Review:</label>
<textarea name="content" id="reviewContent"></textarea>
<input type="submit" value="Add Review">
</form>

<% if (artist.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
      <% artist.reviews.forEach(function(r) { %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>